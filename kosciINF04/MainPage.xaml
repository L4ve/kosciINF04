<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="kosciINF04.MainPage"
    BackgroundColor="#F5F5DC">

    <ScrollView>
        <VerticalStackLayout
            Spacing="10"
            Padding="10">

            <Label
                Text="Gra w kości Autor: Paweł S"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="White"
                BackgroundColor="#A52A2A"
                HorizontalTextAlignment="Center"
                HorizontalOptions="Fill"
                Padding="10" />

            <Button
                x:Name="CounterBtn"
                Text="Rzut koścmi"
                Clicked="OnCounterClicked"
                BackgroundColor="#D2691E"
                TextColor="White"
                HorizontalOptions="Center"
                Margin="0,10"/>

            <HorizontalStackLayout
                BackgroundColor="White"
                Padding="5">

                <Image x:Name="Dice1" Source="question.jpg" HeightRequest="60" Margin="9"/>
                <Image x:Name="Dice2" Source="question.jpg" HeightRequest="60" Margin="9"/>
                <Image x:Name="Dice3" Source="question.jpg" HeightRequest="60" Margin="9"/>
                <Image x:Name="Dice4" Source="question.jpg" HeightRequest="60" Margin="9"/>
                <Image x:Name="Dice5" Source="question.jpg" HeightRequest="60" Margin="9"/>

            </HorizontalStackLayout>
            
            <Label
                x:Name="Label6"
                Text="Wynik: 0"
                FontSize="18"
                HorizontalOptions="Center"
                Margin="0,10"
                TextColor="Black"
                />
            <Label
                x:Name="Label7"
                Text="Wynik tego rzutu: 0"
                FontSize="18"
                HorizontalOptions="Center"
                Margin="0,10"
                TextColor="Black"
                />
            <Button
                x:Name="ResetBtn"
                Text="Resetuj wynik"
                Clicked="ResetClicked"
                BackgroundColor="#D2691E"
                TextColor="White"
                HorizontalOptions="Center"
                Margin="0,10"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
