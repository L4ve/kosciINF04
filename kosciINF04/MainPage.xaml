<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="kosciINF04.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Button
                x:Name="ResetBtn"
                Text="Reset!"
                Clicked="ResetClicked"/>
            <HorizontalStackLayout Spacing="10">
                <Image x:Name="Dice1" Source="question.jpg" WidthRequest="60"/>
                <Image x:Name="Dice2" Source="question.jpg" WidthRequest="60"/>
                <Image x:Name="Dice3" Source="question.jpg" WidthRequest="60"/>
                <Image x:Name="Dice4" Source="question.jpg" WidthRequest="60"/>
                <Image x:Name="Dice5" Source="question.jpg" WidthRequest="60"/>
            </HorizontalStackLayout>

            <Label
                x:Name="Label6"
                Text="Wynik: 0"
                FontSize="18"
                HorizontalOptions="Center"/>

            <Button
                x:Name="CounterBtn"
                Text="Roll!"
                Clicked="OnCounterClicked"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
